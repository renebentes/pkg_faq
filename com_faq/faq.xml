<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
	<name>COM_FAQ</name>
	<author>Rene Bentes Pinto</author>
	<creationDate>20/02/2013</creationDate>
	<copyright>(C) 2013 Makesoft, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see http://www.gnu.org/licenses/gpl-2.0.html</license>
	<authorEmail>renebentes@makesoft.com.br</authorEmail>
	<authorUrl>http://www.makesoft.com.br</authorUrl>
	<version>1.0</version>
	<description>COM_FAQ_XML_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
	</update>
	<files folder="site">
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<filename>faq.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>metadata.xml</filename>
		<filename>router.php</filename>
	</files>
	<languages folder="site">
		<language tag="pt-BR">language/pt-BR/pt-BR.com_faq.ini</language>
	</languages>
	<media folder="media" destination="com_faq">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>index.html</filename>
	</media>
	<administration>
		<menu view="cpanel" img="../media/com_faq/images/menu/faq.png" link="option=com_faq" alt="Faq">com_faq</menu>
		<submenu>
			<menu view="cpanel" img="../media/com_faq/images/menu/cpanel.png" link="option=com_faq" alt="Faq/Cpanel">com_faq_cpanel</menu>
			<menu view="faqs" img="../media/com_faq/images/menu/faq.png" link="option=com_faq&amp;view=faqs" alt="Faq/Faqs">com_faq_faqs</menu>
			<menu view="categories" img="../media/com_faq/images/menu/category.png" link="option=com_categories&amp;extension=com_faq" alt="FAQ/Categories">com_faq_categories</menu>
		</submenu>
		<files folder="admin">
			<folder>controllers</folder>
			<folder>help</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>faq.php</filename>
		</files>
		<languages folder="admin">
			<language tag="pt-BR">language/pt-BR/pt-BR.com_faq.ini</language>
			<language tag="pt-BR">language/pt-BR/pt-BR.com_faq.sys.ini</language>
		</languages>
	</administration>
</extension>